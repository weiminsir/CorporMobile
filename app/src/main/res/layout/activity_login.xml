<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shyms.corpormobile.ui.activity.LoginActivity">

    <include layout="@layout/widget_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:text="注册"
            android:textColor="@color/grey"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/up_rounded_rectangle_box_new"

        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/nick_part"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/username_login_page"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:hint="手机/邮箱"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:textColorHint="@color/grey"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#dedede"></View>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp">

            <EditText
                android:id="@+id/password_login_page"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:textColorHint="@color/grey"
                android:textSize="18dp" />


        </FrameLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <CheckBox
            android:id="@+id/cb_remember_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="记住密码"
            android:textColor="@color/grey"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/cbal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="自动登录"
            android:textColor="@color/grey"
            android:textSize="18dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center">

        <Button
            android:id="@+id/login_button_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aquamarine"
            android:paddingBottom="13dp"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingTop="13dp"
            android:text="登录"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="忘记密码"
        android:textColor="@color/grey"
        android:textSize="18dp" />

</LinearLayout>


