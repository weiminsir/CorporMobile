<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.shyms.corpormobile.ui.activity.ResetPasswordActivity">

    <include layout="@layout/widget_top_bar"/>

    <LinearLayout
        android:id="@+id/phone_reset_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_rectangle_box"
            android:hint="您的用户名"
            android:paddingBottom="13dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/et_previpus_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_rectangle_box"
            android:hint="旧用户密码"
            android:paddingBottom="13dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_rectangle_box"
            android:hint="您的新密码"
            android:paddingBottom="13dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/et_vertify_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_rectangle_box"
            android:hint="请输入收到的验证码"
            android:paddingBottom="13dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/re_send_code_auth_code_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_button_style"
            android:text="发送验证码"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_accomplish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@color/blue"
            android:paddingBottom="13dp"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:text="完成"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <TextView

        android:id="@+id/tips_email_tips_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="13dp"
        android:textColor="@color/grey"
        android:textSize="16dp"/>

</LinearLayout>
